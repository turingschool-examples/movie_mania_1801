<h1>
  All Movies
  <% if @director %>
  by <%= @director.name %>
  <% end %>
</h1>

<% @movies.each do |movie| %>
  <div class="movie-<%= movie.id %>">
    <a href="/movies/<%= movie.id %>"><%= movie.title %></a>
    <%= movie.description %>
    <%= button_to "Add Movie", cart_path(movie_id: movie.id)%>
  </div>
<% end %>
